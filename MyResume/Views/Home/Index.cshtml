                    </span>
                    <!-- name menu block -->
                    <span class="name">Özgeçmiş</span>
                </a>
                <!-- end menu block (resume) -->
                <!-- start menu block (portfolio) -->
                <a href="@Url.RouteUrl("Portfolio")" class="menu-li">
